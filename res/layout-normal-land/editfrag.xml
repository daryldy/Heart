<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Button
      android:id="@+id/date"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
    />
    <Button
      android:id="@+id/time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      />
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TableLayout
      android:layout_weight="50"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      >
      <TableRow>
	<TextView
	  android:text="@string/systolic"
	  android:layout_weight="1"
	  android:gravity="center"
	  style="@style/label"
	  />
	<TextView
	  android:text="@string/diastolic"
	  android:layout_weight="1"
	  android:gravity="center"
	  style="@style/label"
	  />
	<TextView
	  android:text="@string/pulse"
	  android:layout_weight="1"
	  android:gravity="center"
	  style="@style/label"
	  />
      </TableRow>
      <TableRow>
	<NumberPicker
	  android:id="@+id/systolic"
	  android:layout_weight="1"
	  android:gravity="center"
	  />
	<NumberPicker
	  android:id="@+id/diastolic"
	  android:layout_weight="1"
	  android:gravity="center"
	  />
	<NumberPicker
	  android:id="@+id/pulse"
	  android:layout_weight="1"
	  android:gravity="center"
	  />
      </TableRow>
    </TableLayout>
    <RelativeLayout
      android:layout_weight="50"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      >
      <TextView
	android:id="@+id/location_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_alignParentTop="true"
	style="@style/label"
	android:text="@string/location"
	/>
      <RadioGroup
	android:id="@+id/location"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_below="@id/location_label"
	>
	<RadioButton
	  android:id="@+id/upperarm"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="@string/upperarm"
	  />
	<RadioButton
	  android:id="@+id/forearm"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="@string/forearm"
	  />
      </RadioGroup>
      <TextView
	android:id="@+id/side_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_toRightOf="@id/location"
	android:layout_alignParentTop="true"
	android:layout_marginLeft="20dp"
	style="@style/label"
	android:text="@string/side"
	/>
      <RadioGroup
	android:id="@+id/side"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_below="@id/side_label"
	android:layout_toRightOf="@id/location"
	android:layout_marginLeft="20dp"
	>
	<RadioButton
	  android:id="@+id/left"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="@string/left"
	  />
	<RadioButton
	  android:id="@+id/right"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="@string/right"
	  />
      </RadioGroup>
      <EditText
	android:id="@+id/notes"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:hint="@string/notes"
	android:layout_below="@id/location"
	android:layout_alignParentLeft="true"
	/>
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>

